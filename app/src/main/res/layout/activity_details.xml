<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="businessDetail"
            type="com.eman.trudocapp.domain.model.Business" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/media_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:businessImage="@{businessDetail.image_url}"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/name"
            android:text="@{businessDetail.name}"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/img_phone"
            app:layout_constraintEnd_toStartOf="@+id/img_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/media_image" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_phone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:visibility="invisible"
            android:src="@drawable/ic_phone_call"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_title"
            app:layout_constraintTop_toBottomOf="@+id/media_image" />

        <RatingBar
            android:id="@+id/subtitle_text3"
            style="@style/customRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:businessRate="@{businessDetail.rating}"
            android:clickable="false"
            android:isIndicator="true"
            android:max="5"
            android:rating="3"
            android:scaleX="1"
            android:scaleY="1"
            android:transformPivotX="5dp"
            android:transformPivotY="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_review"
            app:layout_constraintEnd_toStartOf="@+id/txt_review"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_phone" />

        <TextView
            android:id="@+id/txt_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/review_count"
            android:text="@{`ReviewCount : `+businessDetail.review_count}"
            android:textColor="#8A000000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/subtitle_text3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/subtitle_text3"
            app:layout_constraintTop_toBottomOf="@+id/img_phone" />


        <TextView
            android:id="@+id/txt_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/category"
            android:text="@{`Category : `+businessDetail.categories.get(0).title}"
            android:textColor="#8A000000"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/subtitle_text3"
            app:layout_constraintTop_toBottomOf="@+id/subtitle_text3" />


